<Page x:Class="Practic2Abganeev.Pages.TasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practic2Abganeev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tasks"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DGTasks"/>
        <StackPanel Grid.Row="1">
            <Button x:Name="BAddTasks"
                    Content="Добавить Задачу"
                    Click="BAddTasks_Click"/>
            <Button x:Name="BEditTasks"
                    Content="Редактировать задачу"
                    Click="BEditTasks_Click"/>
        </StackPanel>
    </Grid>
</Page>

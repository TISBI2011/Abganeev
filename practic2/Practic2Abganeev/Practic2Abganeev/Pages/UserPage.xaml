<Page x:Class="Practic2Abganeev.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practic2Abganeev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Добавление пользователя"
                       FontSize="30"/>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="1">
            <TextBlock Text="Имя"/>
            <TextBox x:Name="TextBoxName"/>
            <Button x:Name="BAddUser"
                    Content="Добавить"
                    Click="BAddUser_Click"/>
            <Button x:Name="BAddCancel"
                    Content="Отмена"
                    Click="BAddCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
